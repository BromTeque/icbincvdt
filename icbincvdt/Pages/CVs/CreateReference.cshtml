@page
@model icbincvdt.Pages.CVs.CreateReferenceModel

@{
    ViewData["Title"] = "Add Reference";
    ViewData["TheCVID"] = Request.Query["id"];
}

<h1>Add</h1>

<h4>Reference</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Reference.CVID" value="@ViewData["TheCVID"]"/>
            <div class="form-group">
                <label asp-for="Reference.ReferenceName" class="control-label"></label>
                <input asp-for="Reference.ReferenceName" class="form-control">
                <span asp-validation-for="Reference.ReferenceName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reference.ReferencePhoneNumber" class="control-label"></label>
                <input asp-for="Reference.ReferencePhoneNumber" class="form-control">
                <span asp-validation-for="Reference.ReferencePhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="MyCVs">Back to My CVs</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}