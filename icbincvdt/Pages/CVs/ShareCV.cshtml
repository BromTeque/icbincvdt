@page
@using icbincvdt.Models
@model icbincvdt.Pages.CVs.ShareCVModel
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "CV";
}

<h1>Ola Normann's</h1>

<div>
    <h4>CV</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CV.Summary)
        </dt>
        <dd class="col-sm-10">
            <table class="table table-dark">
                <tr>
                    <td>
                        @Html.DisplayFor(model => model.CV.Summary)
                    </td>
                </tr>
            </table>
        </dd>
        <dt class="col-sm-2">
            Profile
        </dt>
        <dd class="col-sm-10">
            <table class="table table-dark">
                <tr>
                    <th scope="col">Name </th>
                    <th scope="col">E-Mail</th>
                    <th scope="col">Phone Number</th>
                    <th scope="col">Address</th>
                </tr>
                <tr>
                    <td>Ola Nordmann</td>
                    <td>ola@uia.no</td>
                    <td>56116367</td>
                    <td>Osloveien 1, 0101 Oslo, Norway</td>
                </tr>
            </table>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CV.Educations)
        </dt>
        <dd class="col-sm-10">
            <table class="table table-dark">
                <tr>
                    <th scope="col">School</th>
                    <th scope="col">Description</th>
                    <th scope="col">From</th>
                    <th scope="col">To</th>
                </tr>
                @foreach (var item in Model.CV.Educations)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.EducationTitle)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EducationText)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EducationDateBegin)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EducationDateEnd)
                        </td>
                    </tr>
                }
            </table>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CV.Experiences)
        </dt>
        <dd class="col-sm-10">
            <table class="table table-dark">
                <tr>
                    <th scope="col">Experience</th>
                    <th scope="col">Descritpion</th>
                    <th scope="col">From</th>
                    <th scope="col">To</th>
                </tr>
                @foreach (var item in Model.CV.Experiences)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ExperienceTitle)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ExperienceText)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ExperienceDateBegin)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ExperienceDateEnd)
                        </td>
                    </tr>
                }
            </table>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CV.Skills)
        </dt>
        <dd class="col-sm-10">
            <table class="table table-dark">
                <tr>
                    <th scope="col">Skill</th>
                    <th scope="col">Description</th>
                    <th scope="col">Rating (out of 100)</th>
                </tr>
                @foreach (var item in Model.CV.Skills)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.SkillTitle)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SkillText)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SkillRating)
                        </td>
                    </tr>
                }
            </table>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CV.References)
        </dt>
        <dd class="col-sm-10">
            <table class="table table-dark">
                <tr>
                    <th scope="col">Name and Company</th>
                    <th scope="col">Phone Number</th>
                </tr>
                @foreach (var item in Model.CV.References)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ReferenceName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ReferencePhoneNumber)
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>